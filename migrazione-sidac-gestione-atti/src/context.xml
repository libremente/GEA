<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd ">

	<!-- <context:property-placeholder location="classpath:*.properties" /> -->
   <context:annotation-config />
   <context:component-scan base-package="com.sourcesense.crl" />

	<bean id="sidacDataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url"
			value="jdbc:oracle:thin:@postedev.pronetics.it:1521:postedev" />
		<property name="username" value="SIDAC2_PROD" />
		<property name="password" value="sidac_pnx_123" />
	</bean>


	<bean
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource"
		id="messageSource" p:basenames="classpath:ext_resources"
		p:fallbackToSystemLocale="false" />

	<bean id="dataExtractor" class="com.sourcesense.crl.sidac.DataExtractor">
		<property name="dataSource">
			<ref bean="sidacDataSource" />
		</property>
	</bean>

	<bean factory-method="create" class="com.sun.jersey.api.client.Client"
		id="client">
	</bean>


	<bean class="org.codehaus.jackson.map.ObjectMapper" id="objectMapper">
	</bean>

	<bean class="com.sourcesense.crl.util.URLBuilder" id="urlBuilder">

	</bean>

	<bean class="com.sourcesense.crl.business.security.AlfrescoSessionTicket"
		id="alfrescoSessionTicket" >
		
	</bean>

</beans>